<Window x:Class="WPF_02_zasoby_statyczne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        xmlns:local="clr-namespace:WPF_02_zasoby_statyczne" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <!-- zasoby statyczne -->
    
    
    <Window.Resources>
        <sys:String x:Key="str1">string 1 - zasób statyczny!</sys:String>
        <sys:String x:Key="str2">string 2 - zasób statyczny!</sys:String>
    </Window.Resources>
    
    <StackPanel Margin="10">
        <TextBlock Text="{StaticResource str1}" FontSize="56" />
        <TextBlock Text="{StaticResource str2}" FontSize="24" />
     </StackPanel>
    
</Window>
